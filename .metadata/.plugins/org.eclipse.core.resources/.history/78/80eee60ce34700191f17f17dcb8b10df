grammar sdu.mmmi.mdsd.MathInterpreter with org.eclipse.xtext.common.Terminals

generate mathInterpreter "http://www.mmmi.sdu/mdsd/MathInterpreter"

MathExp:
	'result' 'is' exp=Exp
;

Exp:
	left=Atomic (operator=ExpOp right=Exp)?
;

Atomic returns Exp:
	{Number} value=INT |
	{Parenthesis} '(' exp=Exp ')'
;

ExpOp:
	{Plus} '+' | {Minus} '-' | {Mult} '*' | {Div} '/'	
;

Primary returns Exp:
	Number | Parenthesis
;

/*
Parenthesis:
	'(' exp=Exp ')'
;

Number:
	value=INT
; */