grammar sdu.mmmi.mdsd.MathInterpreter with org.eclipse.xtext.common.Terminals

generate mathInterpreter "http://www.mmmi.sdu/mdsd/MathInterpreter"

MathExp:
	'result' 'is' exp=Exp
;

Exp:
	Atomic ({Plus.left=current} operator=ExpOp right=Atomic)?
;

Atomic returns Exp:
	'(' exp=Exp ')' |
	{Number} value=INT
;

ExpOp:
	{Plus} '+' |
	{Minus} '-' |
	{Mult} '*' |
	{Div} '/'	
;



