grammar sdu.mmmi.mdsd.MathInterpreter with org.eclipse.xtext.common.Terminals

generate mathInterpreter "http://www.mmmi.sdu/mdsd/MathInterpreter"

MathExp:
	'result' 'is' exp=Exp
;

Exp:
	PlusOrMinus
;

Atomic returns Exp:
	{Number} value=INT
;

Primary returns Exp:
	'(' Exp ')' |
	Atomic
;



PlusOrMinus returns Exp:
	MultOrDiv ({Plus.left=current} '+' | {Minus.left=current} '-' right=MultOrDiv)*
;

MultOrDiv returns Exp:
	Primary ({Mult.left=current} '*' | {Div.left=current} '/' right=Primary)*
;



