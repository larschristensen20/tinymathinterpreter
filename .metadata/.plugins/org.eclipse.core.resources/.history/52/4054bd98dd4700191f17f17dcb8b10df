grammar sdu.mmmi.mdsd.MathInterpreter with org.eclipse.xtext.common.Terminals

generate mathInterpreter "http://www.mmmi.sdu/mdsd/MathInterpreter"

MathExp:
	'result' 'is' exp=Exp
;

Exp:
	left=Atomic ({Plus.left=current} operator=ExpOp right=Exp)?
;

Atomic returns Exp:
	Primary
;

ExpOp:
	{Plus} '+' | {Minus} '-'	 | {Mult} '*' | {Div} '/'	
;

Primary returns Exp:
	Number | Parenthesis
;

Parenthesis:
	'(' exp=Exp ')'
;

Number:
	value=INT
;